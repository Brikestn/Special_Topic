<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <br>
                        <header class="bg-light text-dark ">
                            <h6 class="product_name"><%= product.product_name %></h6>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.image_path %>" alt="Avatar"  style="width:100%">
                        </div>
                        <div class="text-dark">
                            <h4 class="product__price"><%= product.price %> Bath</h4>
                        </div>
                        <form method="get" action="/detail">
                            <input type="hidden" id="product_id" name="product_id" value="<%= product.product_id %>">
                            <button id="<%= product.product_id %>" class="btn" type="submit" >Detail</button>
                        </form>
                    </article>
                <% } %>
            </div>
            <br>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>